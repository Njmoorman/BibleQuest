@page "/"
@using Microsoft.JSInterop
@inject IJSRuntime JS

<h1>Bible Quest for Kids</h1>

<p>ðŸš€ Your Blazor WebView is running inside .NET MAUI!</p>

<hr />

<div id="react-root">
    <p>Loading Bible Quest React bundle...</p>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
        {
            return;
        }

        try
        {
            await JS.InvokeVoidAsync("BibleQuest.loadReactApp");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"React bootstrap failed: {ex.Message}");
        }
    }
}
